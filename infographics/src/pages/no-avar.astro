---
import Letter from "../components/Letter.astro";
import Grid from "../components/Grid.astro";
import Layout from "../layouts/Layout.astro";
import TestFont from "../fonts/TestFont.astro";
import { getAxis } from "../utilities";

const weights = getAxis(1, 1000, 8);
---

<Layout>
  <TestFont />
  <div style={{ fontFamily: "TestFont", margin: "100px auto" }}>
    <Grid columnsCount={8}>
      {weights.map((weight) => <Letter weight={weight} width={100} />)}
      {
        weights.map((weight) => (
          <span style={{ textAlign: "center" }}>{weight}</span>
        ))
      }
    </Grid>
  </div>
</Layout>
